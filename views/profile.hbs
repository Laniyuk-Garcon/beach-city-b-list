<header>
    <nav>
        <a href="/profile" >Home</a>
    </nav>

    <div class="profile-header">
      <div>
        <h1>{{name}}</h1>  
        <h2>{{handle}}</h2>
      </div>

      <div>
        <img class="profileimg" src={{image}} alt="profile pic">
      </div>
    </div>

</header>

<main>
<div class= "page-content">
    <div id="bio">
        <h2>Bio</h2>
        <p>{{bio}}</p>
    </div>

    <div id="feed">
        {{#each feed}}
            <div id="post">
                <img  class="postImage" src={{image}} alt="posters profile pic">
                <div id='text'>
                  <h2>{{name}}</h2>
                  <p>{{post}}</p>
                </div>
            </div>
        {{/each}}
        <form id="login" action = "/profile/{{id}}" method = "post">
          <label for = "Comment">Write {{name}} a message!</label>
          <input type = "text" name = "Comment">
          <input type = "submit" value = "Fuse to feed">
        </form>

    </div>
</div>
</main>